@model List<Category>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary col-12 d-flex justify-content-center">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Add Category</a>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive overflow-hidden">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td class="p-1">
                                <div class="btn-group">
                                    <a class="btn btn-primary mr-1" asp-route-id="@item.Id" asp-action="Edit">Edit</a>
                                    <a class="btn btn-danger ml-1" asp-route-id="@item.Id" asp-action="Delete">Delete</a>
                                    
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

