@model Category
<div class="container-fluid">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-lg-6 col-md-12 col-md-p-0">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                      
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Create Category</h1> 
                                </div>
                                <form method="post">
                                    <div class="form-group">
                                        <input type="text" asp-for="CategoryName" class="form-control form-control-user" placeholder="Cateory Name">
                                        <span class="text-danger" asp-validation-for="CategoryName"></span>
                                    </div>
                                    <input type="submit" class="btn btn-primary btn-user btn-block" value="Add" />
                                </form>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
