@model IEnumerable<Product>


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        @if (TempData["ProductDeleteMsg"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Product </strong> @TempData["ProductDeleteMsg"].
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <h6 class="m-0 font-weight-bold text-primary col-12 d-flex justify-content-center">
            <a class="btn btn-primary" asp-action="Create">Add Product</a>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive overflow-hidden">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Description</th>
                        <th>Product Price</th>
                        <th>Product Category</th>
                        <th>Details</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Price</td>
                            <td>@item.Category.CategoryName</td>
                            
                            <td class="p-1">
                                <div class="btn-group">
                                    <a class="btn btn-primary mr-1" asp-route-id="@item.Id" asp-action="Update">Edit</a>
                                    <a class="btn btn-danger ml-1" asp-route-id="@item.Id" asp-action="Delete">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

